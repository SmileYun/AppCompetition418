<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0096A5"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iiv_user_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/default_icon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp" >

                <TextView
                    android:id="@+id/itv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="蒋肖"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/itv_user_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:text="重庆邮电大学 研究生二年级"
                    android:textColor="#ffffff" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/itv_user_answer_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/itv_user_answer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回答数"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/itv_user_ques_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/itv_user_ques_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提问数"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/itv_user_scores_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="325"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/itv_user_scores_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/background_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ibtn_user_dirmsg"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_background"
                android:text="私信"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/ibtn_user_concern"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/btn_background"
                android:text="关注"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/isv_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="5dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ta非常努力，但是Ta还没有任何问答哟~" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>